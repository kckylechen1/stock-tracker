# ============================================================
# Stock Tracker 环境变量配置模板
# 复制此文件为 .env 并填入真实值
# ============================================================

# Database
DATABASE_URL=mysql://root:stockpass@localhost:3306/stock_tracker

# App
VITE_APP_ID=stock-tracker
JWT_SECRET=your-secret-key-change-in-production
PORT=6888

# OAuth (optional for now)
OAUTH_SERVER_URL=
OWNER_OPEN_ID=

# AI API - SiliconFlow (DeepSeek/Qwen)
BUILT_IN_FORGE_API_URL=https://api.siliconflow.cn
BUILT_IN_FORGE_API_KEY=your-siliconflow-api-key

# AI API - xAI Grok (主要分析模型)
GROK_API_URL=https://api.x.ai/v1
GROK_API_KEY=your-grok-api-key-here
GROK_MODEL=grok-4-1-fast-reasoning

# AI API - 智谱AI GLM (备用/深度分析模型)
# 注册地址: https://open.bigmodel.cn/
# 注意: API Key 只能包含 ASCII 字符，不要用中文占位符！
GLM_API_URL=https://open.bigmodel.cn/api/paas/v4
GLM_API_KEY=your-glm-api-key-here
GLM_MODEL=glm-4.7

# AKTools HTTP API
AKTOOLS_URL=http://127.0.0.1:8098

# 同花顺 iFinD API (可选，用于实时行情)
IFIND_REFRESH_TOKEN=
IFIND_ACCESS_TOKEN=

# Tavily API (可选，用于网络搜索)
TAVILY_API_KEY=

# E2B API (可选，用于代码执行)
E2B_API_KEY=

# Analytics (optional)
VITE_ANALYTICS_ENDPOINT=
VITE_ANALYTICS_WEBSITE_ID=
